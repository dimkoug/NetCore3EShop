@model EventsMedia

@{
    ViewData["Title"] = "Details";
}

<div class="row">
    <div class="col-lg-12">
        <h1>@ViewData["Title"]</h1>
    </div>
</div>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MediaPath)
        </dt>
    </dl>


    <a class="btn btn-light" asp-action="Index">Back</a>
    <a asp-action="Edit" asp-route-id="@Model.Id"><i class="fa fa-pencil-square-o fa-lg text-warning" aria-hidden="true"></i></a>
    <a asp-action="Delete" asp-route-id="@Model.Id"><i class="fa fa-times fa-lg text-danger" aria-hidden="true"></i></a>

</div>
