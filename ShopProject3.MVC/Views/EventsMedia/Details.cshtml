@model Products

@{
    ViewData["Title"] = "Details";
}

<div class="row">
    <div class="col-lg-12">

        <div class="card">
            <div class="card-header">
                <h1>@ViewData["Title"]  @Model.Title</h1>
            </div>
            <div class="card-body">
                <h5 class="card-title">@Model.Price.ToString("C")</h5>
                <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                <a asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-productId="@Model.Id" asp-route-p="1"><i class="fa fa-shopping-cart" aria-hidden="true"></i></a>

                @if (Model.ProductFeatureAttributes != null && Model.ProductFeatureAttributes.Count > 0)
                {
                    <div class="card" style="width: 18rem;">
                        <div class="card-header">
                            Featured
                        </div>
                        <ul class="list-group list-group-flush">
                            @foreach (var item in Model.ProductFeatureAttributes)
                            {
                                <li class="list-group-item">@item.FeatureAttribute.Feature.Title:@item.FeatureAttribute.Title</li>
                            }
                        </ul>
                    </div>
                }

                @if (Model.ProductMedia != null && Model.ProductMedia.Count > 0)
                {
                    <div class="card" style="width: 18rem;">
                        <div class="card-header">
                            Media
                        </div>
                        <ul class="list-group list-group-flush">
                            @foreach (var item in Model.ProductMedia)
                            {
                                <li class="list-group-item"><img src="~/uploaded_files/@item.Media.MediaPath" style="width:100%;height:200px;" /></li>
                            }
                        </ul>
                    </div>
                }

            </div>
        </div>
    </div>
</div>

@if (Model.Children != null && Model.Children.Count > 0)
{
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-header">
                    <h1>Products</h1>
                </div>
                <div class="card-body">

                    <div class="row">
                        @foreach (var item in Model.Children)
                        {
                            <div class="col-md-4">
                                <div class="card mb-4 box-shadow">
                                    <img class="card-img-top" src="https://via.placeholder.com/300" alt="Card image cap">
                                    <div class="card-body">
                                        <p class="card-text"><a asp-controller="products" asp-action="details" asp-route-id="@item.Id">@item.Title</a></p>
                                        <p class="card-text"><a asp-controller="brands" asp-action="details" asp-route-id="@item.BrandId">@item.Brand.Title</a></p>
                                        <p class="card-text">@item.Price.ToString("C")</p>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div class="btn-group">
                                                <a asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-productId="@item.Id" asp-route-p="1"><i class="fa fa-shopping-cart" aria-hidden="true"></i></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        }
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
}





