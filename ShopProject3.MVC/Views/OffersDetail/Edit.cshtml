@model OffersDetail
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Offers detail Edit";
}

<div class="row">
    <div class="col-lg-12">
        <h1>@ViewData["Title"]</h1>
    </div>
</div>

<form asp-action="Edit">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="col-lg-12">
        <div class="form-group">
            <label asp-for="OffersId" class="control-label"></label>
            <select asp-for="OffersId" asp-items="@ViewBag.Offers" class="form-control">
                <option value="">Select</option>
            </select>
            <span asp-validation-for="OffersId" class="text-danger"></span>
        </div>
    </div>
    <div class="col-lg-12">
        <div class="form-group">
            <label asp-for="ProductsId" class="control-label"></label>
            <select asp-for="ProductsId" asp-items="@ViewBag.Products" class="form-control">
                <option value="">Select</option>
            </select>
            <span asp-validation-for="ProductsId" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control">
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="form-check">
                <input asp-for="Published" class="form-check-input" id="exampleCheck1">
                <label class="form-check-label" for="exampleCheck1">@Html.DisplayNameFor(model => model.Published)</label>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="form-check">
                <input asp-for="Deleted" class="form-check-input" id="exampleCheck1">
                <label class="form-check-label" for="exampleCheck1">@Html.DisplayNameFor(model => model.Deleted)</label>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <input class="btn btn-primary float-right" type="submit" value="Save" />
            <input class="btn btn-primary float-right" type="submit" name="continue" value="Save and continue editing" />
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
            <a class="btn btn-light" asp-action="Index">Back</a>
        </div>
    </div>
</form>