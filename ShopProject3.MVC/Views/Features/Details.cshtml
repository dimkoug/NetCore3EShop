@model Features

@{
    ViewData["Title"] = "Details";
}

<div class="row">
    <div class="col-lg-12">
        <h1> @Html.DisplayFor(model => model.Title)</h1>
    </div>
</div>


    <div class="row">
        <div class="col-lg-12">
            <h1>List of feature attributes</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <a asp-controller="FeatureAttributes" asp-action="Create" asp-route-brandId="@Model.Id" class="float-right"><i class="fa fa-plus fa-lg text-primary" aria-hidden="true"></i></a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.FeatureAttributes)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Id)</td>
                            <td>@Html.DisplayFor(modelItem => item.Title)</td>
                            <td>
                                <a asp-controller="FeatureAttributes" asp-action="Details" asp-route-id="@item.Id" ><i class="fa fa-info fa-lg text-primary" aria-hidden="true"></i></a>
                                <a asp-controller="FeatureAttributes" asp-action="Edit" asp-route-id="@item.Id" ><i class="fa fa-pencil-square-o fa-lg text-warning" aria-hidden="true"></i></a>
                                <a asp-controller="FeatureAttributes" asp-action="Delete" asp-route-id="@item.Id" ><i class="fa fa-times fa-lg text-danger" aria-hidden="true"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <a class="btn btn-light" asp-action="Index">Back</a>
            <a asp-action="Edit" asp-route-id="@Model.Id"><i class="fa fa-pencil-square-o fa-lg text-warning" aria-hidden="true"></i></a>
            <a asp-action="Delete" asp-route-id="@Model.Id"><i class="fa fa-times fa-lg text-danger" aria-hidden="true"></i></a>
        </div>

    </div>




