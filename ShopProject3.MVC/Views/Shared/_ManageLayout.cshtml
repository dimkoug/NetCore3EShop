@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Xsrf
@functions{
    public string GetAntiXsrfRequestToken()
    {
        return Xsrf.GetAndStoreTokens(Context).RequestToken;
    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E shop asp core 3 </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/fontawesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/js/bootstrap_datepicker/css/bootstrap-datetimepicker.min.css">
    <link rel="stylesheet" href="~/css/select2.min.css" />
    <link rel="stylesheet" href="~/css/nice-select.css" />

    <link rel="stylesheet" href="~/css/dashboard.css" />
    <link rel="stylesheet" href="~/css/site.css" />

</head>
<body>
    <nav class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0 shadow">
        <a class="navbar-brand col-md-3 col-lg-2 mr-0 px-3" href="#">Eshop asp core 3 </a>
        <button class="navbar-toggler position-absolute d-md-none collapsed" type="button" data-toggle="collapse" data-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <input class="form-control form-control-dark w-100" type="text" placeholder="Search" aria-label="Search">
        <ul class="navbar-nav px-3">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link">Logout</button>
            </form>
        </ul>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
                <div class="sidebar-sticky pt-3">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active" href="#">
                                <span data-feather="home"></span>
                                Dashboard <span class="sr-only">(current)</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Brands" asp-action="Index">
                                Brands
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Categories" asp-action="Index">
                                Categories
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Features" asp-action="Index">
                                Features
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="FeatureAttributes" asp-action="Index">
                                Feature Attributes
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Media" asp-action="Index">
                                Media
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Tags" asp-action="Index">
                                Tags
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Products" asp-action="Index">
                                Products
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Banners" asp-action="Index">
                                Banners
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Offers" asp-action="Index">
                                Offers
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="PressReleases" asp-action="Index">
                                Press Releases
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Events" asp-action="Index">
                                Events
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="EventsMedia" asp-action="Index">
                                Events Media
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">Dashboard</h1>
                </div>

                @RenderBody()
            </main>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/moment/moment-with-locales.min.js"></script>
    <script src="~/js/bootstrap_datepicker/js/bootstrap-datetimepicker.min.js"></script>
    <script src="~/js/select2.full.min.js" type="text/javascript"></script>
    <script src="~/js/jquery.nice-select.min.js" type="text/javascript"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)

    <script>

        $(document).ready(function () {

            $("#BrandId, #ParentId, #FeatureId").niceSelect();

            $("#ProductCategories, #ProductTags, #CategoryFeatures, #SelectedCategories, #SelectedTags").select2();

            var loadForm = function () {
                var btn = $(this);
                $.ajax({
                    url: btn.attr("href"),
                    type: 'get',
                    dataType: 'html',
                    beforeSend: function () {
                        $("#modal").modal("show");
                    },
                    success: function (data) {
                        $("#modal .modal-content").html(data);
                    }
                });
                return false;
            };

            var saveForm = function () {
                var form = $(this);
                var person = form.serialize();
                var formData = JSON.stringify(form.serializeArray());
                console.info(JSON.parse(formData));
                $.ajax({
                    url: form.attr("action"),
                    data: person,
                    contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
                    type: form.attr("method"),
                    //dataType: 'json',
                    success: function (data) {
                        console.info(data);
                        $("#modal").modal("hide");


                    }
                });
                return false;
            };

            $("body").on('click', '.js-load-form', loadForm);
            $("body").on('submit', '.js-save-form', saveForm);

            $("body").on('change', '#category', function () {
                var id = $(this).val();
                $.ajax({
                    url: '/products/getFeature',
                    data: { id: id },
                    type: 'get',
                    dataType: 'json',
                    success: function (data) {
                        console.info(data);
                        var s = '<option value="-1">Please Select a Feature</option>';
                        for (var i = 0; i < data.length; i++) {
                            s += '<option value="' + data[i].id + '">' + data[i].title + '</option>';
                        }
                        $("#feature").html(s);
                    }
                });
            });

            $("body").on('change', '#feature', function () {
                var id = $(this).val();
                $.ajax({
                    url: '/products/getFeatureAttribute',
                    data: { id: id },
                    type: 'get',
                    dataType: 'json',
                    success: function (data) {
                        console.info(data);
                        var s = '<option value="-1">Please Select a Feature Attribute</option>';
                        for (var i = 0; i < data.length; i++) {
                            s += '<option value="' + data[i].id + '">' + data[i].title + '</option>';
                        }
                        $("#attribute").html(s);
                    }
                });
            });

            $('#StartDate').datetimepicker({
                format: 'DD/MM/YYYY',
            });
            $('#EndDate').datetimepicker({
                format: 'DD/MM/YYYY',
            });

        })


    </script>
</body>
</html>
</html>
