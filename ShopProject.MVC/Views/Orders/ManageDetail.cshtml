@{
    Layout = "_CmsLayout";
    ViewData["Title"] = "Order Detail";
}

<div class="row">
    <div class="col">
        @Html.DisplayFor(model => model.Id)
    </div>
</div>

<div class="row">
    <div class="col">
        <a class="btn btn-light" asp-action="Index">Back</a>
        <a asp-action="edit" asp-route-id=" @Html.DisplayFor(model => model.Id)" class="btn btn-warning">Edit</a>
        <a asp-action="delete" asp-route-id=" @Html.DisplayFor(model => model.Id)" class="btn btn-danger">Delete</a>
    </div>
</div>