@model IEnumerable<Banner>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "_CmsLayout";
    ViewData["Title"] = "Banner List";
}


<div class="row">
    <div class="col">
        <a asp-action="create" class="btn btn-primary float-right">Add</a>
    </div>
</div>

<div class="row">
    <div class="col">
        <table class="table table bordered">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model=>model.Code)</th>
                    <th>@Html.DisplayNameFor(model=>model.ImagePath)</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>@item.Code</td>
                        <td>
                            @if (item.ImagePath != null)
                            {
                                <img src="~/uploaded_files/@Html.DisplayFor(modelItem=>item.ImagePath)" alt="Alternate Text" class="thumbnail"/>
                            }
                        </td>
                        <td>
                            <a asp-action="details" asp-route-Id="@item.Id" class="btn btn-primary">Details</a>
                            <a asp-action="edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                            <a asp-action="delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

